<h1>Editing Ad #<%= @ad.id %></h1>

<%= form_for :ad, method: :patch, url: ad_path(@ad) do |f| %>

	<p>
		<%= f.label :budget %><br>
		<%= f.text_field :budget, class: 'form-control' %>
	</p>

	<p>
		<%= f.submit 'Update Ad', :class => 'btn btn-success' %>
	</p>


<% end %>

<%= link_to 'Cancel', ads_path, class: 'btn btn-danger' %>