</script>


<h1>New Ad</h1>


<%= form_for :ad, url: ads_path do |f| %>
	<% if @ad.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@ad.errors.count, "error") %> prohibited this article from being saved:
			</h2>
			<ul>
				<% @ad.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :budget %><br>
		<%= f.text_field :budget, class: 'form-control'%>
	</p>


	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 style="display:inline" class="panel-title">Creatives</h3>
		</div>
		<div class="panel-body">
			<div id="creatives">

			<div id="creative">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Creative #1</h3>
					</div>
					<div class="panel-body">
						<% f.fields_for :creatives do |ff| %>
							<div>
								<%= ff.label :bid %>
								<%= ff.text_field :bid %>

								<%= ff.label :adtext %>
								<%= ff.text_area :adtext %>
							</div>
						<% end %>
					</div>
				</div>
			</div>

				<button id="add_creative" class="btn btn-success">Add More Creatives</button>
			</div>
		</div>
	</div>


	<p>
		<%= f.submit 'Add Ad', :class => 'btn btn-success'%>
	</p>

<% end %>

<%= link_to 'Cancel', ads_path, class: 'btn btn-danger' %>